#!kivy 1.0.5

<TasksApp>:
    btn_add: id_btn_add
    input_add: id_input_add
    layout_stack: id_layout_stack

    Button:
        id: id_btn_add
        text: "Add Task"
        on_press: root.btn_add_click()
        pos: root.width - 102, 2
        width: 100
        height: 50


    TextInput:
        id: id_input_add
        height: 50
        pos: 2, 2
        width: root.width - 105
        height: 50

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        width: root.width - 4
        height: root.height - 55
        pos: 2, 52

        StackLayout:
            id: id_layout_stack
            orientation: "tb-lr"
            padding: 0, 0, 0, 0
            size_hint_y: 1
            size_hint_x: 1
            pos: 2, 52
            spacing: 0
