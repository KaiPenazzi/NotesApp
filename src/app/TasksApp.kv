#!kivy 1.0.5

<TasksApp>:
    btn_add: id_btn_add
    input_add: id_input_add
    layout_stack: id_layout_stack
    
    BoxLayout:
        orientation: 'vertical'
        width: root.width
        height: root.height
        padding: 2

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.07
            padding: 5

            TextInput:
                id: id_input_add
                size_hint: 0.7, 1

            Button:
                id: id_btn_add
                text: "Add Task"
                on_press: root.btn_add_click()
                size_hint: 0.3, 1


        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 1, 0.93

            StackLayout:
                id: id_layout_stack
                orientation: "tb-lr"
                padding: 0, 0, 0, 0
                size_hint_y: 1
                size_hint_x: 1
                #pos: 2, 52
                spacing: 0
